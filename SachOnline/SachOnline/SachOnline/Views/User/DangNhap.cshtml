@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}

<div class="col-md-9">
    <!-- PAGE HEADER -->
    <div class="page_header1">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Đăng nhập</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <!-- LOGIN INFO -->
    <div class="loginfo">
        @using (Html.BeginForm("DangNhap", "User"))
            {
            <span class="notify-login">@ViewBag.ThongBao</span>
            @*<form method="post">*@
            <div class="input-field-ico">
                <i class="fa fa-user-o"></i>
                <input type="text" name="username" id="username" placeholder="Tên tài khoản" required="required" />
            </div>
            <div class="input-field-ico">
                <i class="fa fa-lock"></i>
                <input type="password" name="password" id="password" placeholder="Mật khẩu" required="required" />
            </div>
            <button type="submit">Đăng nhập</button>
            <span>Bạn chưa có tài khoản?<a href="@Url.Content("~/User/Dangky")">Tạo tài khoản</a></span>
            @*</form>*@
        }
    </div>
</div>

