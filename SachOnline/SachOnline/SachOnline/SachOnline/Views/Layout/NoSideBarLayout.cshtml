<body class="no-padding royal_preloader" id="page-top" data-spy="scroll" data-target="#myScrollspy">

    <div class="body">

        <div class="header-wrap">

            <!-- TOPBAR -->
            <div class="topbar">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 tb-left">
                            <ul>
                                <li><span class="fa fa-phone"></span>1900-123-456</li>
                                <li><span class="fa fa-envelope-o"></span>sach_online@gmail.com</li>
                            </ul>
                        </div>
                        <div class="col-md-6 tb-right">
                            <ul class="pull-right">
                                <li><span class="fa fa-map-marker"></span>285 Đội Cấn, quận Ba Đình, tp Hà Nội</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- HEADER -->
            <header>
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 logo">
                            <a href="~/Home"><img src="~/Content/User/images/logo.png" class="img-responsive" alt="" /></a>
                        </div>

                        <div class="col-md-6">
                            @using (Html.BeginForm("TimKiem", "TimKiem", FormMethod.Post, new { @class = "search-menu" }))
                            {
                                <input type="text" name="txtTimKiem" placeholder="Nhập tên sách cần tìm...">
                                <button type="submit"><i class="fa fa-search"></i></button>
                            }
                        </div>

                        <div class="col-md-9">
                            <div class="shop-cart pull-right">
                                @Html.Action("TongSachPar", "GioHang")
                            </div>

                            <div id='navmenu' class="pull-right">
                                <ul>
                                    @{  SachOnlineDbContext db = new SachOnlineDbContext();

                                        if (Session["TaiKhoan"] != null)
                                        {
                                            <li>
                                                <a class="user-text">@Session["hoten"]</a>
                                                <ul>
                                                    <li><a href='@Url.Content("~/User/Dangky")'>Xem đơn hàng</a></li>
                                                    <li><a href='@Url.Action("Edit","User",new { @maKH=Session["id"]})'>Thông tin tài khoản</a></li>
                                                    <li><a href='@Url.Action("Logout","User")'>Thoát</a></li>
                                                </ul>
                                            </li>
                                        }
                                        else
                                        {
                                            <li><a href='@Url.Content("~/User/DangNhap")'>Đăng nhập</a></li>
                                            <li><a href='@Url.Content("~/User/Dangky")'>Tạo tài khoản</a></li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        </div>

        <!-- SHOP CONTENT MAIN -->
        <div class="shop-main">
            <div class="container">
                <div class="row">

                    <!-- SHOP CONTENT -->
                    @RenderBody()

                </div>
            </div>
        </div>

        <!-- FOOTER -->
        <footer>
            <div class="overlay3"></div>
            <div class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 footer-widget">
                            <div class="f-logo"><img src="~/Content/User/images/logo.png" class="img-responsive space30" alt="" /></div>
                            <p>Chúng tôi là đơn vị bán sách luôn đặt uy tín lên hàng đầu. Đem lại những quyển sách tốt nhất cho quý khách hàng.</p>
                        </div>

                        <div class="col-md-3 footer-widget">
                            <h5>Từ khoá</h5>
                            <ul class="tags">
                                <li><a href="#">Yoga</a></li>
                                <li><a href="#">Fitness</a></li>
