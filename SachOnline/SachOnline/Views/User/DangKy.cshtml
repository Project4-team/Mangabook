@model SachOnline.Models.KhachHang
@using SachOnline.Models;
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}
<!-- FILTER -->
<div class="col-md-9">

    <!-- PAGE HEADER -->
    <div class="page_header1">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Tạo tài khoản</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <!-- REGISTER INFO -->
    <div class="reginfo">
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @*<div class="form-group">
                    @Html.LabelFor(model => model.MaKH, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            <div class="reg-field-ico">
                <i class="fa fa-user-o"></i>
                <input type="text" name="taikhoan" id="taikhoan" placeholder="Tên tài khoản">
            </div>

            <div class="reg-field-ico">
                <i class="fa fa-lock"></i>
                <input type="password" name="matkhau" id="matkhau" placeholder="Mật khẩu">
            </div>

            <div class="reg-field-ico">
                <i class="fa fa-address-card"></i>
                <input type="text" name="hoten" id="hoten" placeholder="Họ và tên">
            </div>

            <div class="reg-field-ico">
                <i class="fa fa-envelope"></i>
                <input type="email" name="email" id="email" placeholder="Email">
            </div>

            <div class="reg-field-ico">
                <i class="fa fa-map-marker"></i>
                <input type="text" name="diachi" id="diachi" placeholder="Địa chỉ">
            </div>

            <div class="reg-field-ico">
                <i class="fa fa-mobile"></i>
                <input type="number" name="sdt" id="sdt" placeholder="Số điện thoại">
            </div>

            <div class="reg-field-ico">
                <i class="fa fa-calendar"></i>
                <input type="text" name="ngaysinh" id="ngaysinh" onfocus="(this.type='date')" onblur="(this.type='text')" placeholder="Ngày sinh">
            </div>

            <div class="reg-field-ico">
                <select class="form-control">
                    <option value="nam">Nam</option>
                    <option value="nu">Nữ</option>
                </select>
            </div>

            <div class="btnReg">
                <button id="btnCreate" type="submit" value="Tạo tài khoản">Tạo tài khoản</button>
            </div>
        }
    </div>
</div>
