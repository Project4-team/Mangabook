@using SachOnline.Models;
@using PagedList.Mvc;
@model  PagedList.IPagedList<Sach>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}

<!-- FILTER -->
<div class="col-md-9">
    <!-- SLIDER -->
    <div id="slider">
        <div id="main-slider1" class="owl-carousel owl-theme">
            <div class="item">
                <img src="~/Content/User/images/slider/1.jpg" alt="">
                <div class="container">
                    <h3>Wefit Fitness<span>Helps you get more active</span></h3>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/User/images/slider/2.jpg" alt="">
                <div class="container caption2">
                    <h3>It's not a diet<span>It's a Permanent LIFTSTYLE CHANGE</span></h3>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/User/images/slider/3.jpg" alt="">
                <div class="container">
                    <div class="caption3">
                        <h3>It never get easier<span>You Just Get Stronger</span></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- PAGE HEADER -->
    <div class="page_header1">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Sản phẩm mới</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <!-- SHOP CONTENT -->
    <div class="product-main">
        <div class="row">
            @{int i = 0; }
            @{
                foreach (var item in Model)
                {
                    i++;
                    <div class="col-md-4">
                        <div class="product-info">
                            <div class="product-thumb">
                                <img src="@Url.Content("~/Content/img-sp/"+item.AnhBia)" class="img-responsive" alt="" />
                                <div class="product-overlay">
                                    <span>
                                        <a href="@Url.Action("ThemGioHang","GioHang",new {@MaSach=item.MaSach, @strurl = Request.Url.ToString() })"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</a>
                                        <a href="@Url.Action("ChiTietSach","User",new { @masach=item.MaSach})"><i class="fa fa-paper-plane-o"></i>Xem Chi Tiết</a>
                                    </span>
                                </div>
                            </div>
                            <div class="pi-inner">
                                <h4><a href="#">@item.TenSach</a></h4>
                                <div class="product-price">@string.Format("{0:0,0 VNĐ}", item.GiaBan).Replace(",", ".")</div>
                            </div>
                        </div>
                    </div>
                    @*if (i % 3 ==0)
                        {
                            <div style="clear:both"></div>
                        }*@
                }
            }
        </div>
        <div>

        </div>
        <!-- PAGE NAV -->
        <div class="page-nav">
            @*new PagedListRenderOptions() { LiElementClasses = new List<string>{ "myClass", "yourClass" }})*@
            <ul>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </ul>
            @*<ul>
                    <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">6</a></li>
                    <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                </ul>*@
        </div>
    </div>
</div>
